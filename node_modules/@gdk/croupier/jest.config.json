{
	"transform": {
		"^.+\\.ts?$": "ts-jest"
	},
	"testRegex": ".*\\.spec\\.ts$",
	"moduleFileExtensions": ["js", "json", "ts"],
	"collectCoverageFrom": ["src/**/*.ts"],
	"reporters": ["default", "jest-junit"],
	"coverageReporters": ["text", "json-summary", "lcov"],

	"globals": {
		"ts-jest": {
			"tsconfig": "./tsconfig.json"
		}
	},
	"coverageThreshold": {
		"global": {
			"lines": 0,
			"statements": 0,
			"functions": 0,
			"branches": 0
		}
	},
	"preset": "ts-jest"
}
