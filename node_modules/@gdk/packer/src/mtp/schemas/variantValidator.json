{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Variant",
	"definitions": {
		"betLevelRange": {
			"type": "object",
			"properties": {
				"min": {
					"type": "number"
				},
				"max": {
					"type": "number"
				},
				"step": {
					"type": "number"
				}
			},
			"additionalProperties": false,
			"required": ["min"]
		},
		"betLevel": {
			"type": "array",
			"uniqueItems": true,
			"minItems": 1,
			"items": {
				"$ref": "#/definitions/betLevelRange"
			}
		}
	},
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"name": {
			"description": "The name of the variant.",
			"type": "string",
			"minLength": 1,
			"maxLength": 255
		},
		"certifiedSettingsRef": {
			"description": "The external reference of the related settings.",
			"type": "string",
			"pattern": "^[a-zA-Z0-9]*$",
			"minLength": 1,
			"maxLength": 255
		},
		"externalReference": {
			"description": "The external reference of this variant.",
			"type": "string",
			"pattern": "^[a-zA-Z0-9]*$",
			"minLength": 1,
			"maxLength": 255
		},
		"description": {
			"description": "If the description of this variant.",
			"type": "string",
			"minLength": 1,
			"maxLength": 2048
		},
		"parameters": {
			"description": "Parameters of this variant.",
			"type": "object"
		},
		"nbMinPlayer": {
			"description": "Number of minimum player for this variant.",
			"type": "integer",
			"minimum": 1
		},
		"nbMaxPlayer": {
			"description": "Number of maximum player for this variant.",
			"type": "integer",
			"minimum": 1
		},
		"betLevel": {
			"description": "The bet level for this variant.",
			"type": "array",
			"uniqueItems": true,
			"minItems": 1,
			"items": {
				"$ref": "#/definitions/betLevel"
			}
		},
		"maxSessionsPerPlayers": {
			"description": "Max number of sessions a player can play simultaneously on this variant.",
			"type": "integer",
			"minimum": -1
		}
	},
	"required": [
		"name",
		"externalReference",
		"description",
		"certifiedSettingsRef",
		"parameters",
		"nbMinPlayer",
		"betLevel",
		"maxSessionsPerPlayers"
	]
}
