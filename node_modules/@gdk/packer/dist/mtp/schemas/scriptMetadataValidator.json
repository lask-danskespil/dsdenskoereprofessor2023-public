{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Script metadata",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "gameExternalReference": {
            "description": "The game external reference who own this script.",
            "type": "string",
            "pattern": "^[a-zA-Z0-9]*$",
            "minLength": 1,
            "maxLength": 255
        },
        "description": {
            "description": "The description of the script.",
            "type": "string",
            "minLength": 1,
            "maxLength": 2048
        },
        "version": {
            "description": "The version of the script.",
            "type": "string",
            "minLength": 1,
            "maxLength": 255
        }
    },
    "required": [
        "gameExternalReference",
        "description",
        "version"
    ]
}
