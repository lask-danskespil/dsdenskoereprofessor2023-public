{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Game",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "name": {
            "description": "The name of the game.",
            "type": "string",
            "minLength": 1,
            "maxLength": 255
        },
        "externalReference": {
            "description": "The external reference of the game.",
            "type": "string",
            "pattern": "^[a-zA-Z0-9]*$",
            "minLength": 1,
            "maxLength": 255
        },
        "description": {
            "description": "The description of the game.",
            "type": "string",
            "minLength": 1,
            "maxLength": 2048
        },
        "permanent": {
            "description": "If the game has a permanent room or not.",
            "type": "boolean"
        },
        "gameSessionLockStrategy": {
            "description": "Game session lock strategy.",
            "type": "string",
            "pattern": "(^ALL$)|(^NONE$)|(^BET_ONLY$)|(^ACTION_ONLY$)"
        },
        "maxInactiveGameAllowed": {
            "description": "Number of allowed inactive game session before the player is get out of the room.",
            "type": "number"
        },
        "savePlayerActions": {
            "description": "if the player action should be saved or not.",
            "type": "boolean"
        }
    },
    "required": [
        "name",
        "externalReference",
        "description",
        "permanent",
        "gameSessionLockStrategy",
        "maxInactiveGameAllowed",
        "savePlayerActions"
    ]
}
