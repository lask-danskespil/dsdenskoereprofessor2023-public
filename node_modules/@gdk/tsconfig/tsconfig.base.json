{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Default",
	"extends": [
		"@tsconfig/node18/tsconfig",
		"@tsconfig/strictest/tsconfig"
	],
	"compilerOptions": {
		/* LANGUAGE COMPILATION OPTIONS */
		// This is handle by @tsconfig/node18/tsconfig
		// target is es2022 and lib contains es2023
		"lib": ["DOM", "DOM.Iterable"],
		"resolveJsonModule": true,
		"allowJs": true,

		/* EMIT RULES */
		"noEmit": true, // typescript should not emit by default in case we use another build system (webpack, esbuild, ...)
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"removeComments": true,

		/* TYPE CHECKING RULES */
		// This is handle by @tsconfig/strictest/tsconfig
		// maybe not that strict
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"exactOptionalPropertyTypes": false, // TLDR - Setting to undefined is not the same as a property not being defined at all
		"noPropertyAccessFromIndexSignature": false, // TLDR - Use dot notation for objects if youre sure it exists, use ['index'] notaion if unsure

		/* OTHER OPTIONS */
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		// "emitDecoratorMetadata": true,
		// "experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": false,
		"useDefineForClassFields": true
	}
}
